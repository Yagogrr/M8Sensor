<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Podometro">
    <TextView
        android:id="@+id/tv_passos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/passos"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/passos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_passos"
        app:layout_constraintTop_toTopOf="@id/tv_passos"
        android:text="@string/nombrePassos"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/btn_reiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reiniciar"
        app:layout_constraintTop_toBottomOf="@id/tv_passos"
        app:layout_constraintLeft_toLeftOf="@id/tv_passos" />
    <Button
        android:id="@+id/btnToaltimetro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/altimetre"
        app:layout_constraintTop_toBottomOf="@id/btn_reiniciar"
        app:layout_constraintLeft_toLeftOf="@id/btn_reiniciar"/>




</androidx.constraintlayout.widget.ConstraintLayout>